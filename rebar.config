%% == Erlang Compiler ==

{erl_opts, [
  debug_info
]}.

%% == Dependencies ==

{deps, [
  {cowboy, "2.6.3"},
  {jiffy, "1.0.1"},
  {gproc, "0.8.0"}
]}.

%% == Release ==

{relx, [
  {release, { peer2peer, "0.1.0" }, [peer2peer, inets]},
  {sys_config, "./config/sys.config"},
  {vm_args, "./config/vm.args"},
  {dev_mode, true},
  {include_erts, false},
  {extended_start_script, true}
]}.

%% == Profiles ==

{profiles, [
  {prod, [
    {relx, [
      {dev_mode, false},
      {include_erts, true}
    ]}
  ]}
]}.
